<div class="container">
    <div class="app-grid app-grid-col-3 ">
        <% if (notes.length > 0) { %>
            <% notes.forEach(element => { %>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h3>
                                <%= element.title %>
                            </h3>
                        </div>
                        <hr>
                        <div class="card-text">
                            <p>
                                <%= element.description %>
                            </p>
                            <div>
                                <form action="/apps/notes/delete/<%= element.id %>?_method=DELETE" method="post">
                                    <button class="d-flex gap-2 align-items-center btn btn-danger" type="submit">
                                        <i class="fas fa-trash-alt"></i>
                                        <p class="m-0 p-0">Delete</p>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
                <% }) %>
                    <% } %>
                        <div class="card bg-success" style="height: 200px;">
                            <a class="fs-button center-small-a" href="/apps/notes/add">
                                <i class="fas fa-plus t-green"></i>
                            </a>
                        </div>
    </div>
</div>