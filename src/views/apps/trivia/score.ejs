<div class="container">
    <div class="card bg-success text-white">
        <div class="card-header">Finish</div>
        <div class="card-body">
            <div class="app-grid">
                <div class="card-title">
                    <h2 class="text-center">Score:
                        <%= score %>
                    </h2>
                </div>
                <div class="card-title">
                    <h2 class="text-center">Time:
                        <%= totalTime %>
                    </h2>
                </div>
            </div>

            <div class="d-flex align-items-center justify-content-center animate__animated animate__tada">
                <% if (score <= 250) { %>
                    <h1 class="fw-bold">YOU'RE SUCK!</h1>
                    <% } else if (score <= 750) { %>
                        <h1 class="fw-bold">KEEP DOING IT!</h1>
                        <% } else { %>
                            <h1 class="fw-bold">CONGRATULATIONS!</h1>
                            <% } %>
            </div>
        </div>
        <div class="carf-footer d-flex align-items-center justify-content-center my-2">
            <a href="/apps/trivia/" class="btn btn-secondary btn-lg">Go Back!</a>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Score</th>
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( let index = 0; index < allScores.length; index++ ) { %>
                        <% if (index === userIndex) { %>
                            <tr class="table-info">
                                <% } else { %>
                                    <tr class="table-secondary">
                                        <% } %>
                                            <th scope="row">
                                                <%= allScores[index].score %>
                                            </th>
                                            <td>
                                                <%= allScores[index].name  %>
                                            </td>
                                            <td>
                                                <%= allScores[index].category  %>
                                            </td>
                                            <td>
                                                <%= allScores[index].time  %>
                                            </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>

    </div>

</div>