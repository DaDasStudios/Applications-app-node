<div class="container">
    <div class="app-grid-col-3 app-grid">
        <% books.forEach(book => { %>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        <%= book.title %> /
                            <%= book.author %>
                    </h4>
                    <hr>
                    <img src="<%= book.image%>" class="card-img-top" alt="book's image">
                    <hr>
                    <p>
                        <%= book.description %>
                    </p>
                    <div class="d-flex justify-content-sm-around align-items-center flex-row">
                        <form action="/apps/books/delete/<%=book.id%>/?_method=DELETE" method="post">
                            <button class="btn btn-danger d-flex flex-row align-items-center justify-content-center gap-2" type="submit">
                                <i class="fas fa-trash-alt"></i>
                                <p class="m-0">Delete</p>
                            </button>
                        </form>
                        <a class="btn btn-success d-flex flex-row align-items-center justify-content-center gap-2" href="/apps/books/update/<%=book.id%>">
                            <i class="fas fa-pen-alt"></i>
                            <p class="m-0">Update</p>
                        </a>
                    </div>
                </div>
            </div>
            <% }) %>

                <form action="/apps/books/add" method="post">
                    <div class="card">
                        <div class="card-header">Add Book</div>
                        <div class="card-body d-flex gap-1 flex-column">
                            <label for="title">Title</label>
                            <input autocomplete="off" type="text" class="form-control" id="title" name="title" required autofocus>
                            <label for="author">Author</label>
                            <input autocomplete="off" type="text" class="form-control" id="author" name="author" required>
                            <label for="image">Image</label>
                            <input autocomplete="off" type="url" class="form-control" id="image" name="image" required>
                            <div id="emailHelp" class="form-text">
                                <div class="d-flex gap-2 align-items-center ">
                                    <i class="far fa-question-circle m"></i>
                                    <p class="m-0 p-0">Paste here the url of your image</p>
                                </div>
                            </div>
                            <label for="description">Description</label>
                            <textarea class="form-control" name="description" id="description" rows="10" required></textarea>
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-center">
                            <input class="btn btn-primary" type="submit" value="Add Book">
                        </div>
                    </div>
                </form>
    </div>
</div>